﻿@model Reservation

<h1 class="mt-3">Details</h1>
<a class="btn btn-primary mt-3" asp-controller="Reservation" asp-action="Index">Go back</a>

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                @Model.Name
            </h5>
        </div>
        <div id="detailsContent" class="collapse show">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <p class="mb-1"><strong>Date:</strong> @Model.Date.ToString("dd.MM.yyyy")</p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1"><strong>City:</strong> @Model.City</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <p class="mb-1"><strong>Address:</strong> @Model.Address</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <p class="mb-1"><strong>Room:</strong> @Model.Room</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <p class="mb-1"><strong>Owner:</strong> @Model.Owner</p>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-md-12">
                        <p class="mb-1"><strong>Price:</strong> @Model.Price</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>