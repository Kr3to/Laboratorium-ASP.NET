<div class="container mt-5">
    <div class="card">
        <div class="card-body d-flex flex-column align-items-center">
            <h1 class="text-danger">Are you sure you want to delete this reservation?</h1>

            <form asp-controller="Reservation" asp-action="Delete" method="post" id="deleteForm">
                <input asp-for="Id" type="hidden" name="confirmed" id="confirmed" value="true">

                <div class="d-flex gap-3 mt-3">
                    <button type="submit" class="btn btn-danger mr-2">
                        Yes
                    </button>
                    <a class="btn btn-secondary" asp-controller="Reservation" asp-action="Index">Go back</a>
                </div>
            </form>
        </div>
    </div>
</div>