@{
}

<h1>Contact list</h1>
<a class="btn btn-primary" asp-controller="Contact" asp-action="Create">Add contact</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Priority)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Contact contact in @Model)
        {
            <tr>
                <td>
                    @contact.Name
                </td>
                <td>
                    @contact.Email
                </td>
                <td>
                    @contact.Priority
                </td>
                <td>
                    <a asp-action="Update" asp-route-id=@contact.Id>Edit</a>
                    <a asp-action="Details" asp-route-id=@contact.Id>Details</a>
                    <a asp-action="Delete" asp-route-id=@contact.Id>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>