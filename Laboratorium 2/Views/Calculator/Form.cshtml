<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-6">
            <h2>Calculator</h2>
            <form action="Result" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="a">Number 1</label>
                    <input class="form-control" type="number" name="a" step="0.00001" id="a" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="operator">Operator</label>
                    <select name="op">
                        <option value="add">+</option>
                        <option value="sub">&minus;</option>
                        <option value="mul">&times;</option>
                        <option value="div">&divide;</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="b">Number 2</label>
                    <input class="form-control" type="number" name="b" step="0.00001" id="b" />
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary" type="submit">Oblicz</button>
                </div>
            </form>
        </div>
    </div>
</div>